<% @locations.each do |location| %> 
<strong></strong>
	<h4 class="text-center"> <%= location.name%></h4 > 
	<div class= "row text-center">
	<%= link_to "Edit", location %> | <%= link_to "Delete", location, method: :delete, data: {confirm: 'Are you sure?'} %>
	</div>
	<% location.recordings.each do |recording|%> 
	<strong></strong>
	<div class= "row text-center">
	<div class="col-md-offset-1">
	<p> Temp: <%= recording.temp%></p>
	<p> Status: <%= recording.status%></p>

	</div>
	</div>
	<% end %>
<% end %>